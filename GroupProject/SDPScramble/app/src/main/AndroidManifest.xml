<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.sdpscramble">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/team_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/team_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".PlayerCreationActivity"></activity>
        <activity android:name=".GameActivity"></activity>
        <activity android:name=".PlayerStatisticsActivity"></activity>
        <activity android:name=".WordScrambleCreationActivity"></activity>
        <activity android:name=".WordScrambleStatisticsActivity"></activity>
        <activity android:name=".UnsolvedScrambleSelectActivity"></activity>


    </application>

</manifest>